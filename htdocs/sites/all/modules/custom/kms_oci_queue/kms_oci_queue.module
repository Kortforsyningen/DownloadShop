}

function kms_oci_queue_admin_page_jobs () {
  $output = array();
  foreach(kms_oci_queue_fetch_queue_names() as $name) {
    $output["job_queue_title_$name"] = array(
      '#type' => 'html_tag',
      '#tag' => 'h2',
      '#value' => 'Query jobs (' . KmsOciQueueJob::typeFromQueueName($name) . ')',
    );
    foreach(kms_oci_queue_get_items($name) as $item) {
      $job = KmsOciQueueJobFactory::get($item['item_id']);
      $rows[] = array(
        array('data' => $job->jid),
        array('data' => $job->info),
        array('data' => $job->status->message),
        array('data' => format_date($job->created)),
      );
    }
    $output["job_queue_table_$name"] = array(
      '#theme' => 'table',
      '#header' => array(t('Job id'), t('Info'), t('Status'), t('Created')),
      '#rows' => $rows,
    );
  }
  return $output;
}
