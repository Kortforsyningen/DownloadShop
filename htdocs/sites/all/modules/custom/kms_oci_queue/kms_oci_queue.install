<?php

function kms_oci_queue_install() {
  foreach(_kms_oci_queue_queues() as $queue => $class) {
    variable_set("queue_class_$queue", $class);
    $queue = DrupalQueue::get($queue);
    $queue->createQueue();
  }
}

function kms_oci_queue_uninstall() {
  foreach(_kms_oci_queue_queues() as $queue) {
    $queue = DrupalQueue::get($queue);
    $queue->deleteQueue();
    variable_del("queue_class_$queue");
  }
}

