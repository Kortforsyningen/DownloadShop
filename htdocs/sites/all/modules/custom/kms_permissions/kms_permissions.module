    $form['select_all_field_predefined'] = array(
        '#type' => 'checkbox',
        '#title' => t('Select / Unselect all'),
        '#attributes' => array('onclick' => 'Drupal.behaviors.kms_perms_checkboxes.checkUncheckAll(this, "field-name-field-predefined-datacollections");'),
